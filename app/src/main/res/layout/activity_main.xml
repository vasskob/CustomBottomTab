<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
    tools:context="com.task.vasskob.customtab.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:clickable="true"
        android:orientation="horizontal"
        android:weightSum="5"
        >

        <ImageButton
            android:id="@+id/home"
            style="@style/button_portrait"
            android:src="@drawable/ic_home_selector"/>

        <ImageButton
            android:id="@+id/notification"
            style="@style/button_portrait"
            android:src="@drawable/ic_notification_selector"/>

        <ImageButton
            android:id="@+id/camera"
            style="@style/button_portrait"
            android:src="@drawable/ic_camera_selector"/>

        <ImageButton
            android:id="@+id/search"
            style="@style/button_portrait"
            android:src="@drawable/ic_find_selector"/>

        <ImageButton
            android:id="@+id/profile"
            style="@style/button_portrait"
            android:src="@drawable/ic_person_selector"/>

    </LinearLayout>

</RelativeLayout>
